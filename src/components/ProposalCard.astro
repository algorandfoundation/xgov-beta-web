---
import { capitalizeFirstLetter } from "../functions/capitalization";


const { proposal } = Astro.props;
---
<li class="relative bg-white border-2 border-algo-black p-4 rounded-lg max-w-3xl">
    <h3 class="text-lg text-wrap w-52 lg:w-[38rem] lg:text-2xl mt-10 mb-6 lg:mb-14 font-bold">{proposal.title}</h3>
    
    <p class="text-xl">{proposal.category}</p>
    <p class="text-xl">{ capitalizeFirstLetter(proposal.fundingType) }</p>
    <p class="text-xl mb-6 lg:mb-14">{proposal.requestedAmount} ALGO</p>

    <div class="absolute top-0 right-0 mt-4 mr-4 flex flex-col items-end gap-4">
        <p class:list={[
            {
                'text-algo-blue border-algo-blue': proposal.phase === 'discussion',
                'text-algo-teal border-algo-teal': proposal.phase === 'vote',
            },
            "p-0.5 px-4 rounded-full lg:text-lg text-algo-blue border-2 border-algo-blue"
        ]}>
            {
                proposal.phase === 'submission' ? 'Submission' :
                proposal.phase === 'discussion' ? 'Discussion' :
                proposal.phase === 'vote' ? 'Voting' :
                proposal.phase === 'closure' ? 'Closure' : ''
            }
        </p>
        <p class="text-lg my-4 mr-2">- {proposal.proposer}</p>
    </div>

    <a class="absolute bottom-0 right-0 mb-4 mr-4 text-xl font-bold" href="/proposal">read more</a>
</li>