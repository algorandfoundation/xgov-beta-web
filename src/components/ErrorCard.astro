---
interface Props {
  message: string;
  title?: string;
}

const { message, title } = Astro.props;
---

<div
  class="max-w-md mx-auto p-4 border border-algo-red rounded-md shadow-md"
>
  <div class="flex items-center gap-2">
    <span class="text-algo-red">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 9v3m0 2.25h.01M21.75 12c0 5.385-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12 6.615 2.25 12 2.25 21.75 6.615 21.75 12z"
        ></path>
      </svg>
    </span>
    <span class="font-bold text-2xl text-algo-red"
      >{title ? title : "Error"}</span
    >
  </div>
  <p class="mt-2 text-3xl px-6 text-algo-red">{message}</p>
</div>
