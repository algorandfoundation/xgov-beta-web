---
import { Icon } from 'astro-icon/components';


interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header class="w-full h-16 lg:h-24 flex justify-between items-center border-b-2 border-algo-black bg-white px-4 lg:px-10">
    <h1 class="text-4xl lg:text-7xl font-bold">{ title }</h1>
    <div class="hidden lg:inline-flex items-center gap-2 lg:gap-20">
        <nav class="hidden md:flex gap-20 font-bold text-lg">
            <a class="" href="/docs">Docs</a>
            <a class="" href="/cohort">Cohort</a>
        </nav>
        <button class="flex items-center gap-2 bg-algo-black text-lg rounded-md text-white p-2 px-4">
            <Icon name="wallet" />
            Connect Wallet
        </button>
    </div>
    <a class="lg:hidden" href="/nav">
        <Icon name="bars" class="size-8 fill-algo-black" />
    </a>
</header>
