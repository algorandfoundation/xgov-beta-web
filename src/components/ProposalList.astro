---
import ProposalCard from "./ProposalCard.astro";
import type { ProposalCardDetails } from "../types/proposals";

interface Props { 
    proposals: ProposalCardDetails[];
}

const { proposals } = Astro.props;
---
<h2 class="text-2xl lg:text-4xl font-bold py-2 mb-2">Active Proposals</h2>
{
    proposals.length === 0 ? (
        <p>No proposals yet</p>
    ) : (
        <ul class="flex flex-col gap-4">
            {proposals.map((proposal) => (
                <ProposalCard proposal={proposal} />
            ))}
        </ul>
    )
}
