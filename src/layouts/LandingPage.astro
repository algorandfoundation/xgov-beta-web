---
import Header from "@/layouts/shell/Header.astro";
import Content from "@/layouts/shell/Content.astro";
import Footer from "@/layouts/shell/Footer.astro";

import { ThemeToggle } from "@/components/button/ThemeToggle/ThemeToggle";
import { ConnectIsland } from "@/components/Connect/Connect.island";
import { MobileNavIsland } from "@/components/MobileNav/MobileNav";

const path = Astro.url.pathname;
---

<div class="flex flex-col min-h-full">
  <Header path={path}>
    <ConnectIsland client:only="react" path={path} />
    <ThemeToggle client:load />
    <div class="lg:hidden relative" slot="mobile-nav">
      <div class="size-10"></div>
      <div class="absolute inset-0">
        <MobileNavIsland client:only="react" />
      </div>
    </div>
  </Header>
  <Content>
    <slot name="hero" />
    <div
      class="relative isolate overflow-hidden bg-white dark:bg-algo-black pt-8 lg:overflow-visible h-full"
    >
      <slot name="breadcrumb" />
      <slot />
    </div>
    <slot name="sidebar" />
  </Content>
  <Footer />
</div>
